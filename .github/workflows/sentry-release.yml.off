name: release

on:
  push:
    branches:
      - develop
      - main

jobs:
  sentry-release:
    runs-on: ubuntu-latest

    strategy:
      fail-fast: true

    steps:
      - uses: actions/checkout@v2

      - name: Get Release
        id: set-variables
        run: |
          echo ::set-output name=release::$(git log --pretty="%h" -n1 HEAD)
          echo ::set-output name=repository::$(echo "${{ github.repository }}" | awk -F / '{print $2}' | sed -e "s/:refs//")

      - name: Create sentry release
        uses: getsentry/action-release@v1
        env:
          SENTRY_AUTH_TOKEN: ${{ secrets.SENTRY_AUTH_TOKEN }}
          SENTRY_ORG: ${{ github.repository_owner }}
        with:
          version: ${{ steps.set-variables.outputs.release }}
          projects: ${{ steps.set-variables.outputs.repository }}
